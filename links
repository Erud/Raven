while read -r line; 
do
  demand=$(echo "$line" | grep -c "<Demand>")
  if [ $demand -eq 1 ]; then
    cl=$(echo "$line" | sed 's/<[^>]*>//g')
    echo "$(date +"%F %T"),$((cl))" >> "$(date +"%Y%m%d").csv"
  fi
done < /dev/ttyACM0
